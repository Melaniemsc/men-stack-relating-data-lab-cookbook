<!-- views/users/show.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.username %>'s Profile</title>
</head>
<body>
  <h1><%= user.username %>'s Profile</h1>
  <h2>Pantry Items:</h2>
  <ul>
    <% user.pantry.forEach(item => { %>
      <li><%= item.name %></li>
    <% }); %>
  </ul>
</body>
</html>
