<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to your Pantry, <%= user.username %></h1>
    <% if (user) { %>
     <p>Here is your pantry</p>
     <ul><% pantry.forEach(item => { %>
      <li>
        <form action="/users/<%= user._id%>/foods/<%= item._id %>?_method=DELETE" method="POST">
          <p><a href="/users/<%= user._id%>/foods/<%= item._id %>/edit"><%= item.name %></a></p>
        <button type="submit">🗑️</button>
        </form>
      </li>
     <% }) %>
    </ul>
    <% } else { %>
      <p>There are no items in this pantry</p>
      <% } %>
    <a href="/users/<%= user._id%>/foods/new">add new item</a>
  </body>
</html>
